<h1 class="mx-auto p-4" style="width: 600px">Liste des restaurants</h1>

<ul class="list-group grid gap-3 mx-4">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item list-group-item-secondary mx-4">
      <%= link_to restaurant.name, restaurant_path(restaurant), class: "fw-bolder p-3 mb-2 bg-info-subtle text-info-emphasis text-decoration-none" %>
    </li>
  <% end %>
</ul>

<div class="mx-auto p-2" style="width: 200px;">
  <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>
